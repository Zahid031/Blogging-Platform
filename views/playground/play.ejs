        <div class="col-md-6 offset-md-3">
            <div class="card card-body">
                <h4>Create A New Account</h4>
                <form action="/playground/play" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="username">Enter Your User Name (Must be unique)</label>
                        <input type="text" name="username" id="username" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="username">Choose Your File</label>
                        <input type="file" name="my-file" class="form-control">
                    </div>

                    <input type="submit" class="btn btn-primary" value="signup">
                </form>
                <a href="/auth/login" class="my-3 text-center">Already have an account? Login here..</a>
            </div>
        </div>
    </div>
</div>

